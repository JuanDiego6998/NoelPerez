<div class="article-clean">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-8 offset-lg-1 offset-xl-2">
                <div class="intro">
                    <h1 class="text-center">Equipo de Investigaci√≥n</h1>
                    <p class="text-center"><span class="by">Por</span> <a href="#">Noel Perez</a></p>
                </div>
                {{#each equipos}}
                <div class="row">
                    <div class="col">
                        <div class="text">
                            <h2>{{this.nombre}}</h2>
                            <ul>
                                {{#each this.miembros}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <a class="btn btn-danger text-left" type="button" href='/equipos_admin/{{this._id}}'>Eliminar</a>
                {{/each}}
                <div style="margin: 27px;"><a class="btn btn-primary" data-toggle="collapse" aria-expanded="true"
                        aria-controls="collapseAdminPeriodo" role="button" href="#collapseAdminPeriodo">Nuevo curso</a>
                    <div class="collapse show" id="collapseAdminPeriodo">
                        <form class="text-center" method="post" action=''>
                            <div class="form-group">
                                <input type='text' class="form-control form-control-sm" name="nombre"
                                    placeholder="Nombre equipo" style="margin-top: 22px;"></input>
                                <input type='text' class="form-control form-control-sm" name="miembros"
                                    placeholder="Miembros separados por coma" style="margin-top: 22px;"></input>
                            </div>
                            <div class="form-group"><button class="btn btn-success btn-sm"
                                    type="submit">Agregar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>